<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-6 col xs-12 profile-border">
      <div class="well">
        <div class="scroll">
          <div class="profile-pic">
          <% if current_user.avatar.url == nil %>
            <%= image_tag "default_image.png", class: "img-responsive img-circle avatar" %>
          <% else %>
            <%= image_tag current_user.avatar.url(:thumb), class: "img-responsive img-circle avatar", alt: "default-img" %>
          <% end %>
          </div>
        </div>
        <hr>
        <h2 class="text-center"><strong>@<%= current_user.username %></strong></h2>
        <hr>
        <h2 class="text-left"><strong>Name:</strong>  <%= current_user.name %></h2>
        <% if current_user.city %>
          <h2 class="text-left"><strong>City:</strong>  <%= current_user.city.name %></h2>
        <% end %>
        <h2 class="text-left"><strong>Date joined:</strong>  <%= time_ago_in_words(current_user.created_at) %> ago</h2>
        <% if current_user.id == @user.id %>
          <%= link_to "Edit User", edit_user_path(current_user), class: "btn btn-block btn-warning" %>
          <br>
          <%= link_to "Delete User", user_path(current_user), method: :delete, class: "btn btn-block btn-danger" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 col-sm-6 col-xs-12">
      <% @posts.each do |post |%>
        <div class="row">
          <div class="well">
            <h4><%= link_to post.title, city_post_path(post.city, post) %></h4>
            <p><%= post.body %></p>
            <% if current_user.id == @user.id %>
              <a href="#" class="btn btn-sm">Edit Button</a>
              <a href="#" class="btn btn-sm">Delete Button</a>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container text-center">
  <%= paginate @posts, :theme => 'twitter-bootstrap-3',
                       :pagination_class => "pagination-sm" %>
</div>